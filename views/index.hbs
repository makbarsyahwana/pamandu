{{# each products }}
  <div class="row">
    {{# each this}}   
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}"/>
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">Rp{{ this.price }}</div>
                <a href="/{{ this.title }}" class="btn btn-success pull-right" role="button">BOOK NOW</a>
                <form method="post" action="/add-to-cart/{{ this._id }}">
                  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                  <input type="submit" name="add-to-cart" value="add-to-cart" class="btn btn-success pull-right">
                </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
