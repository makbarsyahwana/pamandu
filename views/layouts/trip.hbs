 <div class="row"> 
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{ product.imagePath }}">
      <div class="caption">
        <h3>{{ product.title }}</h3>
        <p class="description">{{ product.description }}</p>
        <div class="clearfix">
          <div class="price pull-left">Rp{{ product.price }}</div>
          <a href="#" class="btn btn-success pull-right" role="button">BOOK NOW</a>
        </div>
      </div>
    </div>
  </div>
</div>